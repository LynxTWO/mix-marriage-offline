{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mix-marriage-offline.dev/schemas/scene_locks.schema.json",
  "title": "MMO Scene Locks Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "locks"],
  "properties": {
    "schema_version": { "const": "0.1.0" },
    "locks": {
      "type": "object",
      "patternProperties": {
        "^LOCK\\.[A-Z0-9_.]+$": { "$ref": "#/$defs/scene_lock" }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "scene_lock": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "description", "applies_to", "severity"],
      "properties": {
        "label": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "applies_to": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["object", "bed", "scene"]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "severity": {
          "type": "string",
          "enum": ["hard", "taste"]
        },
        "help_id": {
          "type": "string",
          "pattern": "^HELP\\.[A-Z0-9_.]+$"
        }
      }
    }
  }
}
