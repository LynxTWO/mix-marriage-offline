{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mix-marriage-offline.dev/schemas/listen_pack.schema.json",
  "title": "MMO Listen Pack",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "root_out_dir", "entries"],
  "properties": {
    "schema_version": { "const": "0.1.0" },
    "root_out_dir": { "$ref": "#/$defs/posix_abs_path" },
    "entries": {
      "type": "array",
      "items": { "$ref": "#/$defs/listen_pack_entry" }
    },
    "translation_auditions": { "$ref": "#/$defs/translation_auditions_summary" },
    "stems_auditions": { "$ref": "#/$defs/stems_auditions_summary" }
  },
  "$defs": {
    "posix_abs_path": {
      "type": "string",
      "pattern": "^(?:[A-Za-z]:/|/).+"
    },
    "posix_rel_path": {
      "type": "string",
      "pattern": "^(?![A-Za-z]:/)(?!/)[^\\\\]+$"
    },
    "posix_path": {
      "type": "string",
      "pattern": "^[^\\\\]+$"
    },
    "listen_pack_paths": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "bundle": { "$ref": "#/$defs/posix_path" },
        "pdf": { "$ref": "#/$defs/posix_path" },
        "csv": { "$ref": "#/$defs/posix_path" },
        "applied_dir": { "$ref": "#/$defs/posix_path" },
        "rendered_dir": { "$ref": "#/$defs/posix_path" },
        "render_manifest": { "$ref": "#/$defs/posix_path" },
        "apply_manifest": { "$ref": "#/$defs/posix_path" }
      }
    },
    "listen_pack_entry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["variant_id", "label", "paths", "audition_order", "notes"],
      "properties": {
        "variant_id": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "preset_id": { "type": "string", "minLength": 1 },
        "profile_id": { "type": "string", "minLength": 1 },
        "overlay": { "type": "string", "minLength": 1 },
        "paths": { "$ref": "#/$defs/listen_pack_paths" },
        "audition_order": { "type": "integer", "minimum": 1 },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "translation_audition_segment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start_s", "end_s"],
      "properties": {
        "start_s": { "type": "number", "minimum": 0 },
        "end_s": { "type": "number", "minimum": 0 }
      }
    },
    "translation_audition_render": {
      "type": "object",
      "additionalProperties": false,
      "required": ["profile_id", "path", "notes"],
      "properties": {
        "profile_id": { "type": "string", "minLength": 1 },
        "path": { "$ref": "#/$defs/posix_rel_path" },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "translation_auditions_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["manifest_path", "renders", "segment"],
      "properties": {
        "manifest_path": { "$ref": "#/$defs/posix_rel_path" },
        "renders": {
          "type": "array",
          "description": "Sorted lexicographically by profile_id.",
          "items": { "$ref": "#/$defs/translation_audition_render" }
        },
        "segment": {
          "oneOf": [
            { "$ref": "#/$defs/translation_audition_segment" },
            { "type": "null" }
          ]
        }
      }
    },
    "stems_auditions_group": {
      "type": "object",
      "additionalProperties": false,
      "required": ["bus_group_id", "output_wav"],
      "properties": {
        "bus_group_id": { "type": "string", "minLength": 1 },
        "output_wav": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        }
      }
    },
    "stems_auditions_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["present"],
      "properties": {
        "present": { "type": "boolean" },
        "manifest_path": { "$ref": "#/$defs/posix_abs_path" },
        "rendered_groups_count": { "type": "integer", "minimum": 0 },
        "attempted_groups_count": { "type": "integer", "minimum": 0 },
        "missing_files_count": { "type": "integer", "minimum": 0 },
        "warnings_count": { "type": "integer", "minimum": 0 },
        "groups": {
          "type": "array",
          "maxItems": 50,
          "description": "Sorted lexicographically by bus_group_id.",
          "items": { "$ref": "#/$defs/stems_auditions_group" }
        },
        "warning": { "type": "string", "minLength": 1 }
      }
    }
  }
}
