{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mix-marriage-offline.dev/schemas/render_request.schema.json",
  "title": "MMO Render Request",
  "description": "A request to render a scene to a target layout, with optional routing plan and render options.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "target_layout_id",
    "scene_path"
  ],
  "properties": {
    "schema_version": { "const": "0.1.0" },
    "target_layout_id": { "$ref": "#/$defs/layout_id" },
    "scene_path": { "$ref": "#/$defs/posix_path" },
    "routing_plan_path": { "$ref": "#/$defs/posix_path" },
    "options": { "$ref": "#/$defs/render_options" }
  },
  "$defs": {
    "posix_path": {
      "type": "string",
      "pattern": "^[^\\\\]+$",
      "minLength": 1
    },
    "layout_id": {
      "type": "string",
      "pattern": "^LAYOUT\\.[A-Z0-9_.]+$"
    },
    "render_options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "output_formats": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["wav", "flac", "wv", "aiff", "alac"]
          }
        },
        "downmix_policy_id": {
          "type": "string",
          "pattern": "^POLICY\\.DOWNMIX\\.[A-Z0-9_.]+$"
        },
        "gates_policy_id": {
          "type": "string",
          "minLength": 1
        },
        "sample_rate_hz": {
          "type": "integer",
          "minimum": 8000
        },
        "bit_depth": {
          "type": "integer",
          "enum": [16, 24, 32]
        },
        "dry_run": {
          "type": "boolean"
        }
      }
    }
  }
}
