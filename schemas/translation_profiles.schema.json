{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mix-marriage-offline.dev/schemas/translation_profiles.schema.json",
  "title": "MMO Translation Profiles Registry",
  "type": "object",
  "required": [
    "TRANS.MONO.COLLAPSE",
    "TRANS.DEVICE.PHONE",
    "TRANS.DEVICE.SMALL_SPEAKER",
    "TRANS.DEVICE.EARBUDS",
    "TRANS.DEVICE.CAR"
  ],
  "patternProperties": {
    "^TRANS\\.[A-Z0-9_.]+$": {
      "$ref": "#/$defs/translation_profile"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "default_thresholds": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "max_lufs_delta",
        "max_spectral_delta_db",
        "min_mono_correlation",
        "max_transient_smear",
        "max_hf_harshness_db"
      ],
      "properties": {
        "max_lufs_delta": {
          "type": "number",
          "minimum": 0,
          "maximum": 24
        },
        "max_spectral_delta_db": {
          "type": "number",
          "minimum": 0,
          "maximum": 24
        },
        "min_mono_correlation": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        },
        "max_transient_smear": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "max_hf_harshness_db": {
          "type": "number",
          "minimum": 0,
          "maximum": 24
        }
      }
    },
    "scoring": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mono_compatibility",
        "spectral_balance",
        "vocal_clarity",
        "low_end_translation",
        "fatigue_risk"
      ],
      "properties": {
        "mono_compatibility": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "spectral_balance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "vocal_clarity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "low_end_translation": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "fatigue_risk": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "translation_profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "label",
        "description",
        "intent",
        "default_thresholds",
        "scoring"
      ],
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "intent": {
          "type": "string",
          "enum": [
            "compatibility",
            "tonal",
            "fatigue"
          ]
        },
        "default_thresholds": {
          "$ref": "#/$defs/default_thresholds"
        },
        "scoring": {
          "$ref": "#/$defs/scoring"
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
